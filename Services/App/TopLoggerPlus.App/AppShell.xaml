<?xml version="1.0" encoding="utf-8" ?>
<Shell
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:page="clr-namespace:TopLoggerPlus.App.Pages" 
    x:Class="TopLoggerPlus.App.AppShell"    
    Title="TopLoggerPlus">

    <FlyoutItem Title="Select User">
        <ShellContent ContentTemplate="{DataTemplate page:UserSelectPage}" Route="UserSelectPage"/>
    </FlyoutItem>
    <FlyoutItem Title="All Routes">
        <ShellContent ContentTemplate="{DataTemplate page:AllRoutesPage}" Route="AllRoutesPage"/>
    </FlyoutItem>
    <FlyoutItem Title="Expiring Routes">
        <ShellContent ContentTemplate="{DataTemplate page:ExpiringRoutesPage}" Route="ExpiringRoutesPage"/>
    </FlyoutItem>
</Shell>
