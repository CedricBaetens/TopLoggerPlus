<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:TopLoggerPlus.App"
             xmlns:page="clr-namespace:TopLoggerPlus.App.Pages"
             x:Class="TopLoggerPlus.App.App">
    <Application.Resources>
        <ResourceDictionary Source="Resources/Styles.xaml" />
    </Application.Resources>
    
    <Application.MainPage>
        <Shell 
            FlyoutWidth="68"
            FlyoutBehavior="{OnIdiom Phone=Disabled, Default=Locked}">

            <ShellContent ContentTemplate="{DataTemplate page:OverviewPage}"/>
        </Shell>
    </Application.MainPage>
</Application>
